@model Form;
<html>
@{
    ViewData["title"] = "Formularz";
}
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Nazwa")
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description, "Opis")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group form-check">
            @Html.CheckBoxFor(x => x.IsVisible, new {@class ="form-check-input"})
            @Html.LabelFor(x => x.IsVisible, "Widoczne?", new { @class = "form-check-label" })
        </div>
        <input type="submit" />
    }
</html>